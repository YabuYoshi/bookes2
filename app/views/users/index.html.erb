<div class="container">
 <div class="row">
  <div class="col-lg-4">
   <div>
   <%= render 'user', user: @user %>
   </div>
 </div>

  <div class="col-lg-8">
    <table class="table table-striped">
    <h1>Users</h1>
     <thead>
      <tr>
       <th>image</th>
       <th>name</th>
       <th></th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
       <% @users.each do |user| %>
        <tr>
        <%= link_to user_path(user.id) do %>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= @user.name %></td>
          <td><%= link_to 'Show', user %></td>
          <% end %>
        </tr>
        <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>
