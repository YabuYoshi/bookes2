<div>
  <%= flash[:notice] %>
</div>
<div class="container">
 <div class="row">
  <div class="col-lg-4">
   <div>
     <%= render 'user', user: @user %>
   </div>
 </div>

  <div class="col-lg-8">
    <table class="table table-striped">
    <h1>Books</h1>
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
       <% @books.each do |book| %>
        <tr>
        <%= link_to book_path(book.id) do %>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><%=link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
          <% end %>
        </tr>
        <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>
